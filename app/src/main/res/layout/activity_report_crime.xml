<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.example.jaisa.smarttraumareliever_flawsome.ReportCrimeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/report_layout"
        >
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter your text here"
            android:gravity="top"
            android:cursorVisible="true"
            android:inputType="textLongMessage|textMultiLine"
            android:id="@+id/report_text"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:height="420sp"
            android:textSize="17sp"
            android:background="@drawable/edittext_bg"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="bottom">
    <Button
        android:id="@+id/record_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/record"
        android:layout_below="@id/report_layout"
        android:layout_gravity="bottom"
        android:layout_marginLeft="3dp"
        style="?android:attr/borderlessButtonStyle"        />

    <Button
        android:layout_width="290sp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="SEARCH VIOLATIONS"
        android:layout_marginLeft="5dp"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="10sp"
        android:layout_below="@id/record_button"
        android:layout_toRightOf="@+id/record_button"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:id="@+id/report_crime_button"
        />
    </LinearLayout>
</RelativeLayout>
