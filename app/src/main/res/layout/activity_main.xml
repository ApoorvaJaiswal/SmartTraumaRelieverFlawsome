<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorGrey"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/reporting_status"
            android:background="@color/colorWhite"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/tick_mark"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crime Reported Successfully"
                android:textSize="17sp"
                android:padding="6dp"
                android:textColor="@color/colorBlack"
                />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/reporting_status"
            android:id="@+id/report_crime"
            android:onClick="onClick"
            style="@style/Base.CardView"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:elevation="9dp"
                >
                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="100dp"
                    android:src="@drawable/speak"
                    android:id="@+id/img_speak"
                    />
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:src="@drawable/type"
                    android:layout_toRightOf="@id/img_speak"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_speak"
                    android:text="REPORT YOUR CRIME"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/report_crime"
            style="@style/Base.CardView"
            android:id="@+id/crimes_reported"
            android:onClick="onClick"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:elevation="9dp"
                >
                <ImageView
                    android:layout_width="370dp"
                    android:layout_height="100dp"
                    android:src="@drawable/reports"
                    android:id="@+id/img_reports"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_reports"
                    android:text="CRIME REPORTS"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/crimes_reported"
            android:id="@+id/solved_crime"
            android:onClick="onClick"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:elevation="9dp"
                >
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:src="@drawable/solved"
                    android:id="@+id/img_solved"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_solved"
                    android:text="SOLVED CRIMES"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</RelativeLayout>
